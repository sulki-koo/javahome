<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="Board">
  
  <resultMap id="boardResultMap" type="Board">
    <id property="bid" column="bid"/>
    <result property="bname" column="bname"/>
    <result property="bacnt" column="bacnt"/>
  </resultMap>

  <insert id="insertBoard" parameterType="Board">
    INSERT INTO BOARD (BID, BNAME, BACNT)
    VALUES (BOARD_SEQ.NEXTVAL, #{bname}, #{bacnt})
  </insert>

  <select id="getBoard" parameterType="int" resultMap="boardResultMap">
    SELECT * FROM BOARD WHERE BID = #{bid}
  </select>

  <select id="selectBoard" resultMap="boardResultMap">
    SELECT * FROM BOARD ORDER BY BID
  </select>

  <update id="updateBoard" parameterType="Board">
    UPDATE BOARD SET BNAME=#{bname} WHERE BID=#{bid}
  </update>

  <delete id="deleteBoard" parameterType="int">
    DELETE BOARD WHERE BID=#{bid}
  </delete>

</mapper>