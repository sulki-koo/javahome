<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Reply">

  <resultMap id="replyResultMap" type="Reply">
    <id property="rid" column="rid"/>
    <result property="rcontent" column="rcontent"/>
    <result property="rregdate" column="rregdate"/>
    <result property="rdelyn" column="rdelyn"/>
    <result property="mid" column="mid"/>
    <result property="aid" column="aid"/>
  </resultMap>

  <insert id="insertReply" parameterType="Reply">
    INSERT INTO REPLY (RID, RCONTENT, RREGDATE, RDELYN, MID, AID)
    VALUES (REPLY_SEQ.NEXTVAL, #{rcontent}, SYSDATE, #{rdelyn}, #{mid}, #{aid})
  </insert>

  <select id="selectReply" resultMap="replyResultMap">
    SELECT * FROM REPLY  WHERE RDELYN='N' ORDER BY RID DESC
  </select>

  <update id="deleteReply" parameterType="Reply">
    UPDATE REPLY SET RDELYN='Y' WHERE RID= #{rid}
  </update>

</mapper>